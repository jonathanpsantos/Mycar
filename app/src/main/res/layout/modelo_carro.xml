<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/idImgcar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/onix_car" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTextModelocar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/idImgcar"
                android:text="Onix LT TURBO 116CV" />



            <TextView
                android:id="@+id/idTextFabricacaocar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/2023" />

            <TextView
                android:id="@+id/idTextDescricaocar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOVO ONIX 1.0 LT TURBO
        (Conf. 5B48HP), pacote R6S ano/modelo 2022/2023
        pintura na cor PRETO OURO NEGRO" />
        </LinearLayout>


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" />



    </LinearLayout>

</LinearLayout>